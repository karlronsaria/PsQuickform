{
    "Preferences": {
        "Title": "System Prep Preferences",
        "FontFamily": "Microsoft Sans Serif",
        "Point": 10,
        "Width": 500,
        "Margin": 10,
        "ConfirmType": "AllowOrDeny"
    },
    "MenuSpecs": [
        {
            "Name": "GeoLocation",
            "Type": "Check",
            "Text": "Allow device geolocation services"
        },
        {
            "Name": "AutoTimeSync",
            "Type": "Check",
            "Text": "Allow automatic time synchronization",
            "Default": true
        },
        {
            "Name": "AutoSetTimeZone",
            "Type": "Check",
            "Text": "Allow automatic time zone update",
            "Default": false
        },
        {
            "Name": "TheInteger",
            "Type": "Numeric",
            "Text": "An integer",
            "Default": 47
        },
        {
            "Name": "TheFloat",
            "Type": "Numeric",
            "DecimalPlaces": 2,
            "Default": 47.7,
            "Mandatory": true
        },
        {
            "Name": "RemoteDesktop",
            "Type": "Check",
            "Text": "Allow Remote Desktop connections to this device"
        },
        {
            "Name": "UserAccountControl",
            "Type": "Check",
            "Text": "Enable User Account Control"
        },
        {
            "Name": "NetworkDiscovery",
            "Type": "Check",
            "Text": "Enable Network Discovery"
        },
        {
            "Name": "FileSharing",
            "Type": "Check",
            "Text": "Enable File Sharing"
        },
        {
            "Name": "ExplorerAnimations",
            "Type": "Check",
            "Text": "Allow animations in Windows Explorer"
        },
        {
            "Name": "WindowsFeed",
            "Type": "Check",
            "Text": "Enable Windows Feed"
        },
        {
            "Name": "UpdatePsHelp",
            "Type": "Check",
            "Text": "Update PowerShell Help docs"
        },
        {
            "Name": "NewHostname",
            "Type": "Field",
            "Text": "New hostname",
            "MaxLength": 20,
            "Default": "myhost1",
            "Mandatory": true
        },
        {
            "Name": "AppxDebloatingPreference",
            "Type": "Enum",
            "Text": "Appx package debloat preference",
            "Symbols": [
                {
                    "Name": "Personal",
                    "Text": "Personal"
                },
                {
                    "Name": "Thin",
                    "Text": "Thin"
                }
            ],
            "Default": "Thin"
        }
    ]
}
